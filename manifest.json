{
  "name": "Screco",
  "description": "Scratch recorder",
  "version": "0.1",
  "manifest_version": 2,
  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  },
  "permissions": [
    "audioCapture",
    { "fileSystem": ["write", "retainEntries", "directory"] },
    "storage"
  ]
}
